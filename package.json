{
  "name": "@zthCn/npm-cli",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@8.6.5",
  "description": "",
  "author": "zthCn",
  "license": "MIT",
  "homepage": "https://github.com/ZTH520/npm-cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZTH520/npm-cli.git"
  },
  "bugs": {
    "url": "https://github.com/ZTH520/npm-cli/issues"
  },
  "keywords": [
    "cli",
    "npm",
    "pkg"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "*.d.ts"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "test": "node dist/index.js",
    "serve": "esno src/index.ts",
    "build": "tsup",
    "dev": "tsup --watch src",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "enquirer": "^2.4.0",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.39.8",
    "@types/node": "^20.4.5",
    "eslint": "^8.45.0",
    "esno": "^0.17.0",
    "lint-staged": "^13.2.3",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "node scripts/verify-commit"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
